# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           					controllers.Application.index()
GET     /User                       					controllers.Application.user()
GET     /logout                     					controllers.Application.logout()
POST    /                          						controllers.Application.authentication()
GET		/home	        	    						controllers.Application.home()


GET		/export                                         controllers.Export.export()

GET		/export/order                             		controllers.Export.exportOrder()
GET		/export/order/add                         		controllers.Export.exportOrderAdd()
GET		/export/order/add/Detail                        controllers.Export.exportOrderAddDetail()

GET		/export/transferInside                          controllers.Export.exportTransferInside()
GET		/export/transferInside/add                      controllers.Export.exportTransferInsideAdd()
GET		/export/transferInside/add/Detail               controllers.Export.exportTransferInsideAddDetail()

GET		/export/transferOutSide                         controllers.Export.exportTransferOutSide()
GET		/export/transferOutSide/add                     controllers.Export.exportTransferOutSideAdd()
GET		/export/transferOutSide/add/detail              controllers.Export.exportTransferOutSideAddDetail()

GET		/export/donate                                  controllers.Export.exportDonate()
GET		/export/donate/add                              controllers.Export.exportDonateAdd()
GET		/export/donate/add/Detail                       controllers.Export.exportDonateAddDetail()

GET		/export/sold                              		controllers.Export.exportSold()
GET		/export/sold/add                              	controllers.Export.exportSoldAdd()
GET		/export/sold/add/detail                         controllers.Export.exportSoldAddDetail()

GET		/export/other                             		controllers.Export.exportOther()
GET		/export/other/add                             	controllers.Export.exportOtherAdd()
GET		/export/other/add/detail                        controllers.Export.exportOtherAddDetail()

GET		/import											controllers.Import.imports()
GET		/import/institute								controllers.Import.importsInstitute()
GET		/import/instituteAdd							controllers.Import.importsInstituteAdd()

GET             /report                                                         controllers.Application.report()
GET             /report/RemainingMaterial                                       controllers.Application.reportRemainingMaterial()
GET             /report/RemainingMaterialConclusion                             controllers.Application.reportRemainingMaterialConclusion()
GET             /report/DurableArticles                                         controllers.Application.reportDurableArticles()
GET             /report/ImportDurableArticles                                   controllers.Application.reportImportDurableArticles()
GET             /report/exportDurableArticles                                   controllers.Application.reportExportDurableArticles()
GET             /report/exchangeDurableArticles                                 controllers.Application.reportExchangeDurableArticles()
GET		/import/material								controllers.Import.importsMaterial()

GET		/import/materialDurableArticlesAdd				controllers.Import.importsMaterialDurableArticlesAdd()
GET		/import/materialDurableGoodsAdd					controllers.Import.importsMaterialDurableGoodsAdd()
GET		/import/materialConsumableGoodsAdd				controllers.Import.importsMaterialConsumableGoodsAdd()

GET		/import/order									controllers.Import.importsOrder()

GET		/import/order/DurableArticlesAdd	    		controllers.Import.importsOrderDurableArticlesAdd()
GET		/import/order/DurableArticlesAdd/Material1		controllers.Import.importsOrderDurableArticlesAddMaterial1()
GET		/import/order/DurableArticlesAdd/Material2		controllers.Import.importsOrderDurableArticlesAddMaterial2()

GET		/import/order/GoodsAdd	    					controllers.Import.importsOrderGoodsAdd()
GET		/import/order/GoodsAdd/Material1				controllers.Import.importsOrderGoodsAddMaterial1()
GET		/import/order/GoodsAdd/Material2				controllers.Import.importsOrderGoodsAddMaterial2()

GET     /Admin                      					controllers.Admin.index()
GET     /Admin/addUser              					controllers.Admin.addUser()
GET     /Admin/manageRole           					controllers.Admin.manageRole()
POST	/Admin/addRole									controllers.Admin.addRole()
POST	/Admin/removeRole								controllers.Admin.removeRole()
POST    /Admin/saveUser									controllers.Admin.saveNewUser()
POST    /Admin/removeUser								controllers.Admin.removeUser()

GET     /graph           								controllers.Graph.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               					controllers.Assets.at(path="/public", file)
