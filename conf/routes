# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /User                       controllers.Application.user()
GET     /logout                     controllers.Application.logout()
POST    /                           controllers.Application.authentication()
GET	/home	        	    		controllers.Application.home()

GET		/import						controllers.Application.imports()
GET		/export                                         controllers.Application.export()

GET		/export/exportOrder                             controllers.Application.exportOrder()
GET		/export/transferOutSide                         controllers.Application.transferOutSide()
GET		/export/transferInside                          controllers.Application.transferInside()
GET		/export/donate                                  controllers.Application.donate()
GET		/export/exportSold                              controllers.Application.exportSold()
GET		/export/exportOther                             controllers.Application.exportOther()


GET		/import/institute			controllers.Application.importsInstitute()
GET		/import/institute/add		controllers.Application.importsInstituteAdd()

GET		/import/material							controllers.Application.importsMaterial()

GET		/import/materialDurableArticlesAdd			controllers.Application.importsMaterialDurableArticlesAdd()
GET		/import/materialDurableGoodsAdd			controllers.Application.importsMaterialDurableGoodsAdd()
GET		/import/materialConsumableGoodsAdd			controllers.Application.importsMaterialConsumableGoodsAdd()


GET		/import/order							controllers.Application.importsOrder()

GET		/import/order/DurableArticlesAdd	    			controllers.Application.importsOrderDurableArticlesAdd()
GET		/import/order/DurableArticlesAdd/Material1			controllers.Application.importsOrderDurableArticlesAddMaterial1()
GET		/import/order/DurableArticlesAdd/Material2			controllers.Application.importsOrderDurableArticlesAddMaterial2()

GET		/import/order/GoodsAdd	    					controllers.Application.importsOrderGoodsAdd()
GET		/import/order/GoodsAdd/Material1				controllers.Application.importsOrderGoodsAddMaterial1()
GET		/import/order/GoodsAdd/Material2				controllers.Application.importsOrderGoodsAddMaterial2()

GET             /report                                                         controllers.Application.report()
GET             /report/RemainingMaterial                                       controllers.Application.reportRemainingMaterial()
GET             /report/RemainingMaterialConclusion                             controllers.Application.reportRemainingMaterialConclusion()
GET             /report/DurableArticles                                         controllers.Application.reportDurableArticles()

GET     /Admin                      controllers.Admin.index()
GET     /Admin/addUser              controllers.Admin.addUser()
GET     /Admin/manageRole           controllers.Admin.manageRole()

GET     /graph           controllers.Graph.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
