# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /User                       controllers.Application.user()
GET     /logout                     controllers.Application.logout()
POST    /                           controllers.Application.authentication()
GET	/home	        	    		controllers.Application.home()

GET		/import						controllers.Application.imports()

GET		/import/institute			controllers.Application.importsInstitute()
GET		/import/institute/add		controllers.Application.importsInstituteAdd()

GET		/import/materialDurableArticles			controllers.Application.importsMaterialDurableArticles()
GET		/import/materialDurableArticles/add			controllers.Application.importsMaterialDurableArticlesAdd()

GET		/import/materialDurableGoods/add			controllers.Application.importsMaterialDurableGoodsAdd()

GET		/import/materialConsumable				controllers.Application.importsMaterialConsumable()

GET		/import/order							controllers.Application.importsOrderDurableArticles()
GET		/import/order/DurableArticlesAdd	    controllers.Application.importsOrderDurableArticlesAdd()





GET		/import/order/DurableArticlesAdd/Material1			controllers.Application.importsOrderDurableArticlesAddMaterial1()
GET		/import/order/DurableArticlesAdd/Material2			controllers.Application.importsOrderDurableArticlesAddMaterial2()
GET		/import/order/DurableArticlesAdd/Material3			controllers.Application.importsOrderDurableArticlesAddMaterial3()

GET		/import/order/add/materialConsumable			controllers.Application.importsOrderAddMaterialConsumable()
GET		/import/order/add/materialConsumable2			controllers.Application.importsOrderAddMaterialConsumable2()
GET		/import/order/add/materialConsumable3			controllers.Application.importsOrderAddMaterialConsumable3()



GET     /Admin                      controllers.Admin.index()
GET     /Admin/addUser              controllers.Admin.addUser()
GET     /Admin/manageRole           controllers.Admin.manageRole()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
